%article
  - if digest
    %h3
      = link_to article.title, article
  - else
    %h2
      = article.title

  %h6
    = article.date.strftime("%b %e, %Y")

  .row
    .large-12.columns
      %div
        - if digest
          = article.summary
        - else
          = article.body

        - if digest and article.summary.length < article.body.length
          %p.readmore
            = link_to "Read more &rarr;", article.url, class: "button secondary radius tiny"
