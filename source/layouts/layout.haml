    %title= content_for?(:title) ? yield_content(:title) : "OLI-G in da House | #{current_page.data.title}"

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/custom.modernizr"

  %body{:class => page_classes}

    / Header

    .row
      .large-12.columns
        .nav-bar
          %ul.button-group
            %li
              %a.button{:href => "/"} About
            %li
              %a.button{:href => "/blog"} Blog

        %h1 
          %a{:href => "/"} OLI-G in da House
        %hr

    / Main Content

    %section{:role => "main", :class => "main"}
      = yield

    / Footer

    %footer.row
      .large-12.columns
        %hr
        .row
          .large-4.columns
            %p Â© OLI-G 2013. All rights reserved.
          .large-8.columns
            %p.right
              Powered by
              %a{:href => "http://middlemanapp.com/"} Middleman
              Hosted by
              %a{:href => "http://pages.github.com/"} GitHub Pages

    = javascript_include_tag "application"

